NumberOfFlashes = NumberOfFlashes - 1
TimeOfFlash = 450 / room_speed
sprite_index = sEnemy
image_xscale = 1.0
image_yscale = image_xscale
}
}
} else if NumberOfFlashes &lt;= 0 {
