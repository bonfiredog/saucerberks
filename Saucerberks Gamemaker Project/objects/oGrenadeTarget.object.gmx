if instance_exists(HittingBullet) and Hit = false {
if Damage &lt; DamageTotal {
audio_sound_pitch(aGrenadeTargetHit, 0.8 * Damage)
audio_play_sound(aGrenadeTargetHit, 1, false)
ScreenShake(30)
Damage = Damage + 1
Hit = true
HitTime = 30
//if Damage has reached the DamageTotal, destroy the Target,
//the GrenadeDet, create an Emitter to shove out loads of clutter,
//and create an explosion.
} else if Damage &gt;= DamageTotal {
ScreenShake(100)
instance_create(x,y,oClutterEmitter)
instance_create(x,y,oGrenadeTargetExplosion)
with oGrenadeDet2 {instance_destroy()}
instance_destroy()
}

//Stop and destroy the hitting bullet,
//as well as playing the 'Hit' sound.
with HittingBullet {
speed = 0
if PlayHitSound = false {
audio_play_sound(aWallHit,1,false)
PlayHitSound = true
}

sprite_index = sGunExplosion
if speed = 0 {
image_alpha = image_alpha - 0.1
if image_alpha &lt;= 0 {
instance_destroy()
}
}
}
}

//While it is 'hit', make the entire GrenadeDet red,
//before returning it to its normal colour.
if Hit = true {
if HitTime &gt; 0 {
HitTime = HitTime - 1
image_blend = c_red
Owner.image_blend = c_red
} else if HitTime &lt;= 0 {
image_blend = c_white
Owner.image_blend = c_white
HitTime = 30
Hit = false
}
}


//Make the GrenadeDet and the Target flash yellow,
//if it hasn't been hit.
if Hit = false and instance_exists(Owner){
if TimeBetweenGlints &lt;= 0 {
if TimeToGlint &gt; 0 {
TimeToGlint = TimeToGlint - 1
image_blend = c_yellow
Owner.image_blend = c_yellow
} else if TimeToGlint &lt;= 0 {
TimeBetweenGlints = 60
TimeToGlint = 50
image_blend = c_white
Owner.image_blend = c_white
}
} else if TimeBetweenGlints &gt; 0 {
TimeBetweenGlints = TimeBetweenGlints - 1
}
}



//Make the GrenadeDet the owner.
if instance_exists(Owner) = false {
if instance_exists(oGrenadeDet2) {
Owner = oGrenadeDet2
}
}
