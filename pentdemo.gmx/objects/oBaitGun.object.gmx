    KickDirection = image_angle + 180
    
    Owner.xShunt = lengthdir_x(Kick,KickDirection)
    Owner.yShunt = lengthdir_y(Kick,KickDirection)
    
    ResetShunts()
    
    ScreenShake(30)
    
    
    
    audio_play_sound(aLiquidShot, 1, false)
